<div class="clearfix"></div>
<div class="row">
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Receitas em Rascunho </h2>
        <div class="clearfix"></div>
      </div>
      <!-- /.panel-heading -->
      <div class="x_content" style="display: block;">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Tipo de Receita</th>
              <th>Culinária</th>
              <th>Ingredientes</th>
              <th>Modo de preparo</th>
              <th>Tempo de preparo</th>
              <th>Status</th>
              <th></th> 
            </tr>
          </thead>
        
          <tbody>
            <% @draft_recipes.each do |recipe| %> 
              <tr>
                <td><%= recipe.name %></td>
                <td><%= recipe.recipe_type.name %></td>
                <td><%= recipe.cuisine.name if recipe.cuisine %></td>
                <td><%= recipe.ingredients %></td>
                <td><%= recipe.cook_method %></td>
                <td><%= recipe.cook_time %></td>
                <td><%= recipe.status %></td>
                <td>
                  <%= link_to publish_users_dashboard_recipe_path(recipe), class: "btn btn-warning btn-circle" do %>
                    <i class="fa fa-check"></i>
                  <% end %>
                <td>
                  <%= link_to edit_users_dashboard_recipe_path(recipe), class: "btn btn-primary btn-circle" do %>
                    <i class="fa fa-edit"></i>
                  <% end %>
                </td>                  
                <td>
              <%= link_to users_dashboard_recipe_path(recipe), method: :delete, class:"btn btn-danger btn-circle",   data: {confirm: "Deseja realmente excluir essa receita?"} do %>               
                <i class="fa fa-minus"></i>
              <%end%>
              </tr>
            <%end%>
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
  </div>
  <div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
      <div class="x_title">
        <h2>Receitas Publicadas </h2>
        <div class="clearfix"></div>
      </div>
      <!-- /.panel-heading -->
      <div class="x_content" style="display: block;">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Tipo de Receita</th>
              <th>Culinária</th>
              <th>Ingredientes</th>
              <th>Modo de preparo</th>
              <th>Tempo de preparo</th>
              <th>Status</th>
              <th></th> 
            </tr>
          </thead>
        
          <tbody>
            <% @published_recipes.each do |recipe| %> 
              <tr>
                <td><%= recipe.name %></td>
                <td><%= recipe.recipe_type.name %></td>
                <td><%= recipe.cuisine.name if recipe.cuisine %></td>
                <td><%= recipe.ingredients %></td>
                <td><%= recipe.cook_method %></td>
                <td><%= recipe.cook_time %></td>
                <td><%= recipe.status %></td>
                <td>
                </td>
              </tr>
            <%end%>
          </tbody>
        </table>
        <!-- /.table-responsive -->
      </div>
      <!-- /.panel-body -->
    </div>
  </div>  
</div>

