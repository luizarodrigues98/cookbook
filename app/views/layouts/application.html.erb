<!DOCTYPE html>
<html>
  <head>
    <title>Cookbook</title>
    <meta>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag "application"%>
  </head>

  <body>
    <main>  
      <% if notice %>
        <p class="alert alert-success"> <%= notice %> </p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger"> <%= alert %> </p>
      <% end %>
      <%= yield %>
    </main>

  </body>
</html>
