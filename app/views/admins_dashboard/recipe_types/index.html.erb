<div class = 'row'>
  <div class="col-lg-12">
    <h1 class="page-header">Listando tipos de receitas</h1>
  </div>
</div>
  <!-- /.panel-heading -->
  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Tipos de receitas</th>
            <th>
            <%= link_to new_admins_dashboard_recipe_type_path, class:"btn btn-success btn-circle" do %>               
                  <i class="fa fa-plus"></i>
                <%end%>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @recipe_types.each do |recipe_type| %>
            <tr>
              <td> <%= recipe_type.name %> </td>
              <td style='width: 100px'> 
                <%= link_to admins_dashboard_recipe_type_path(recipe_type), method: :delete, class:"btn btn-danger btn-circle",   data: {confirm: "Deseja realmente excluir esse tipo de receita?"} do %>               
                  <i class="fa fa-minus"></i>
                <%end%>
              </td> 
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.table-responsive -->
  </div>
  <!-- /.panel-body -->
</div>