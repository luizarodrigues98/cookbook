<div class='row'>
  <% if @recipe_type.errors.any?%>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
    <ul>
      <%@recipe_type.errors.full_messages.each do |message|%>
      <li> <%= message %> </li>
      <%end%>
    </ul>
  </div>
  <%end%>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
  <%= "Criando novo tipo de receita"%>
  </div>


  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <%= form_with(model: @recipe_type, local: true, url: admins_dashboard_recipe_types_path ) do |form| %>

          <div class="form-group">
            <%= form.label 'Tipo de receita' %>
            <%= form.text_field :name,  class: 'form-control'  %>
          </div>
          

          <%= form.submit 'Salvar', class: "btn btn-default" %>

        <% end %>
      </div>

      <!-- /.col-lg-6 (nested) -->
    </div>
    <!-- /.row (nested) -->
  </div>
  <!-- /.panel-body -->
</div>