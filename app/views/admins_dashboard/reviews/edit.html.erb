<div class='row'>
  <div class="col-lg-12">
    <h1 class="page-header">Editando Receita</h1>
  </div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    Editando Receita
  </div>


  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <%= form_with model: @recipe, url: admins_dashboard_review_path, local: true do |f|%>
          <%= f.label 'Nome'%>
          <%= f.text_field :name %>
          <br />
          <div style='margin: 10px 0px'>
            <%= f.label 'Tipo da Receita'%>
            <%= f.collection_select :recipe_type_id, RecipeType.all, :id, :name %>
          </div>

          <div style='margin: 10px 0px'>

            <%= f.label 'CulinÃ¡ria'%>
            <%= f.collection_select :cuisine_id, Cuisine.all, :id, :name %>
          </div>
          <div style='margin: 10px 0px'>

            <%= f.label 'Ingredientes'%>
            <%= f.text_area :ingredients %>
          </div>
          <div style='margin: 10px 0px'>


            <%= f.label 'Modo de preparo'%>
            <%= f.text_field :cook_method %>
          </div>

          <div style='margin: 10px 0px'>

            <%= f.label 'Tempo de preparo'%>
            <%= f.number_field :cook_time %>
          </div>

          <div style='margin: 10px 0px'>
            <%= f.submit 'Salvar' %>
            <%= f.submit 'Salvar e publicar' %>
          </div>

        <% end %>
      </div>

    </div>

    <!-- /.col-lg-6 (nested) -->
  </div>
  <!-- /.row (nested) -->
</div>
<!-- /.panel-body -->
</div>