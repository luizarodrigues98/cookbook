<div class='row'>
  <% if @recipe.errors.any?%>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
    <ul>
      <%@recipe.errors.full_messages.each do |message|%>
      <li> <%= message %> </li>
      <%end%>
    </ul>
  </div>
  <%end%>
</div>
<div class="panel panel-default">
  <div class="panel-heading">
  <%= "Editando Receita"%>
  </div>


  <div class="panel-body">
    <div class="row">
      <div class="col-lg-6">
        <%= form_with(model: @recipe, local: true, url: admins_dashboard_review_path ) do |form| %>

          <div class="form-group">
            <%= form.label 'Nome' %>
            <%= form.text_field :name, class: 'form-control', placeholder: "Nome da receita"%>
          </div>

          <div class="form-group">
            <%= form.label 'Tipo da Receita' %>
            <%= form.collection_select :recipe_type_id, @recipe_types, :id, :name, {}, { class: 'form-control' } %>
          </div>
          
          <div class="form-group">
            <%= form.label 'Culinária' %>
            <%= form.collection_select :cuisine_id, @cuisines, :id, :name, {}, { class: 'form-control' } %>
          </div>
          
          <div class="form-group">
            <%= form.label 'Ingredientes' %>
            <%= form.text_field :ingredients, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= form.label 'Modo de preparo' %>
            <%= form.text_field :cook_method, class: 'form-control'%>
          </div>

          <div class="form-group">
            <%= form.label 'Tempo de preparo' %>
            <%= form.number_field :cook_time, class: 'form-control'%>
          </div>
          <%= form.submit 'Salvar', class: "btn btn-default" %>
          <%= form.submit 'Salvar e publicar', class: "btn btn-default" %>

        <% end %>
      </div>

      <!-- /.col-lg-6 (nested) -->
    </div>
    <!-- /.row (nested) -->
  </div>
  <!-- /.panel-body -->
</div>